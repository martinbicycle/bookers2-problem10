<div class="container">
  <div class="message">
    <h1 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>"><%= @user.name %> さんとのチャット</h1>
    <% @chats.each do |chat| %>
      <% if chat.user_id == current_user.id %>
        <p style="text-align: right;"><%= chat.message %></p>
      <% else %>
        <p style="text-align: left;"><%= chat.message %></p>
      <% end %>
    <% end %>
    <div class="col-12">
      <%= form_with model: @chat, url: user_chats_path, remote: true do |f| %>
        <%= f.text_area :message %>
        <%= f.hidden_field :room_id %>
        <div>
          <%= f.submit'チャットの送信', class: "btn btn-success"%>
        </div>
      <% end %>
    </div>
  </div>
</div>